pipeline {
    agent any
    tools{
        maven 'maven 3.6'
    }

    stages {
        
    
        stage('Build') {
            steps {
               bat "mvn clean package"
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                deploy adapters: [tomcat8(credentialsId: 'deb6a03a-af91-4005-a063-4680c5b1a904', path: '', url: 'http://localhost:8081/')], contextPath: 'hey', war: '**/*.war'
            }
        }
    }
}
